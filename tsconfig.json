{
  "compilerOptions": {
    "target": "es5",
    "importHelpers": true,
    "moduleResolution": "node",
    "strict": true,
    "noEmitHelpers": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "lib",
    "declaration": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.*"
  ]
}
